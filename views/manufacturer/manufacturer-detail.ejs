<!DOCTYPE html>
<html>
  <%- include('../partials/head'); -%>
  <body>
    <%- include('../partials/topnav'); -%>
    <div class="container">
        <h1 class="text-center"> 
        <a href=<%= manufacturer.url + "/update" %> class="btn btn-secondary">Update manufacturer info</a>
        <a href=<%= manufacturer.url + "/update_image" %> class="btn btn-secondary">Update manufacturer image</a>
        <a href=<%= manufacturer.url + "/delete" %> class="btn btn-secondary">Delete manufacturer</a></h1>
    </div>
    <div class="container-sm">
        <div class="card my-4 mx-auto shadow">
            <img src=<%= manufacturer.image_url %> style="max-height:5rem;object-fit:scale-down;" class="card-img-top mt-3" alt=<%- manufacturer.name %>>
            <div class="card-body">
                  <h5 class="card-title"><%- manufacturer.name %></h5>
                  <p class="card-text"><%- manufacturer.description %></p>
                  <p class="card-text"><strong>Established: </strong><%- manufacturer.established %></p>
            </div>
        </div>
    </div>
    <div class="container">
        <h5>Items made by <%- manufacturer.name %></h5>
        <div class="row gap-3 mb-5">
            <% if (manufacturer_items.length < 1) { %>
                <p>No items.</p>
            <% } %>
            <% manufacturer_items.forEach((item) => { %>
                <div class="col-5">
                <a href=<%= item.url %> class="text-decoration-none text-reset">
                <div class="card h-100 shadow">
                    <img src=<%= item.image_url %> style="max-height:10rem;object-fit:scale-down;" class="card-img-top mt-3" alt=<%- item.name %>>
                    <div class="card-body">
                        <h5 class="card-title text-center"><%- item.manufacturer.name + " " + item.name %></h5>
                    </div>
                </div>
                </a>
                </div>
                  <% }) %>
        </div>
    </div>
  </body>