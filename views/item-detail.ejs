<!DOCTYPE html>
<html>
  <%- include('partials/head'); -%>
  <body>
    <%- include('partials/topnav'); -%>
    <div class="container">
    <h1 class="text-center"> 
    <a href="#" class="btn btn-primary">Update item info</a>
    <a href="#" class="btn btn-primary">Update item image</a>
    <a href="#" class="btn btn-primary">Delete item</a></h1>
    </div>
    <div class="container">
        <div class="d-flex mt-5 justify-content-center">
        <div class="card mb-3" style="max-width: 540px;">
            <div class="row g-0">
              <div class="col-md-4">
                <img src=<%= item_details.img %> class="img-fluid rounded-start" alt="...">
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title"><%= item_details.manufacturer.name + " " + item_details.name %></h5>
                  <p class="card-text"><%= item_details.description %></p>
                  <p class="card-text">$<%= item_details.price %></p>
                  <p class="card-text">Quantity: <%= item_details.number_in_stock %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
    </div>
    <%- include('partials/footer'); -%>
  </body>