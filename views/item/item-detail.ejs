<%- include('../partials/page-style'); -%>
    <div class="container">
        <h1 class="text-center"> 
        <a href=<%= item_details.url + "/update" %> class="btn btn-secondary">Update item info</a>
        <a href=<%= item_details.url + "/update_image" %> class="btn btn-secondary">Update item image</a>
        <a href=<%= item_details.url + "/delete" %> class="btn btn-secondary">Delete item</a></h1>
    </div>
    <div class="container-sm">
        <div class="card my-4 mx-auto shadow">
            <img src=<%= item_details.image_url %> style="max-height:20rem;object-fit:scale-down;" class="card-img-top mt-3" alt="<%- item_details.name %>">
            <div class="card-body">
                  <h5 class="card-title"><%- item_details.manufacturer.name + " " + item_details.name %></h5>
                  <p class="card-text"><%- item_details.description %></p>
                  <p class="card-text"><strong>Price: </strong>$<%- item_details.price %></p>
                  <p class="card-text"><strong>Number in stock: </strong><%- item_details.number_in_stock %></p>
                  <p class="card-text"><strong>Categories: </strong>
                    <% item_details.category.forEach((category) => { %>
                    <a href=<%= "/category/" + category._id %> class="btn btn-secondary btn-sm"><%- category.name %></a>
                    <% }) %> </p>
                <p class="card-text"><strong>Manufacturer: </strong><a href=<%= "/manufacturer/" + item_details.manufacturer._id %> class="btn btn-secondary btn-sm"><%- item_details.manufacturer.name %></a></p>
                <p class="card-text"><strong>Made In: </strong><a href=<%= "/made_in/" + item_details.made_in._id %> class="btn btn-secondary btn-sm"><%- item_details.made_in.name %></a></p>
            </div>
        </div>
    </div>
  </body>