<%- include('../partials/page-style'); -%>
<%- include('../partials/title'); -%>
    </div>
    <div class="container">
        <form method="POST" action="" enctype="multipart/form-data">
            <div class="mb-3 w-50">
                <label for="name" class="form-label">Manufacturer</label>
                <input type="text" class="form-control" name="name" required="true" value="">
            </div>
            <div class="mb-3 mx-auto">
                <label for="description" class="form-label">Description</label>
                <textarea class="form-control" rows="4" name="description" required="true"></textarea>
            </div>
            <div class="mb-3 mx-auto">
            <div class="row">
                <div class="col-auto">
                <label for="established" class="form-label">Established</label>
                <input type="number" class="form-control" name="established" required="true" value="">
                </div>
            </div>
            </div>
            <div class="mb-3 mx-auto">
                <label class="form-label" for="image_url">Image</label><br>
                <input type="file" name="image_url" required="true">
            </div>
            <button class="btn btn-secondary mb-4" type="submit">Submit</button>
        </form>
    </div>
    <% if (typeof errors != "undefined") { %>
        <div class="container">
        <ul>
            <% errors.forEach((error) => { %>
                <li><%= error.msg %></li>
            <% }) %>
        </ul>        
        </div>
    <% } %>
  </body>